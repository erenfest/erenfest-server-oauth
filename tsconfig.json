{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "esModuleInterop": true,
    "rootDir": "./",
    "downlevelIteration": true,
    "resolveJsonModule": true
  },
  "include": ["node_modules"]
}
