{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es6",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "esModuleInterop": true,
    "rootDir": "./",
    "downlevelIteration": true,
    "jsx": "react",
    "jsxFactory": "h",
    "resolveJsonModule": true
  }
}
